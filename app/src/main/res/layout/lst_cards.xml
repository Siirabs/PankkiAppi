<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator">

    <TextView
        android:id="@+id/txt_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        app:layout_constraintStart_toEndOf="@+id/img_account"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CARD" />

    <TextView
        android:id="@+id/txt_card_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintStart_toEndOf="@+id/img_account"
        app:layout_constraintTop_toBottomOf="@+id/txt_cvc"
        tools:text="CARD NO:  " />

    <TextView
        android:id="@+id/txt_cvc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_account"
        app:layout_constraintTop_toBottomOf="@+id/txt_card"
        tools:text="ACCOUNT: " />

    <ImageView
        android:id="@+id/img_account"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lst_acc"
        android:contentDescription="Account Image" />
</androidx.constraintlayout.widget.ConstraintLayout>
